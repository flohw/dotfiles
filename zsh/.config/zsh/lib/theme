# Do not load theme if terminal do not supports 256 colors
THEME_FILE=${ZDOTDIR}/deps/powerlevel9k/powerlevel9k.zsh-theme

[[ ! -f $THEME_FILE ]] && echo "powerlevel9k is not installed, run \`git submodule init && git submodule update\`" && return 0
[[ $(tput colors) -lt 256 || ! -f $THEME_FILE ]] && return 0

POWERLEVEL9K_MODE='nerdfont-complete'
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(os_icon dir vcs dir_writable)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(command_execution_time status background_jobs history)
POWERLEVEL9K_OK_ICON=$'\UF00C '

source $THEME_FILE

# vim:syntax=zsh tabstop=4 shiftwidth=4 expandtab

