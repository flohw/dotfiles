# Do not load theme if terminal do not supports 256 colors
THEME_FILE=/usr/share/zsh-theme-powerlevel9k/powerlevel9k.zsh-theme

[[ ! -f $THEME_FILE ]] && echo "powerlevel9k is not installed, run sudo pacman -S zsh-theme-powerlevel9k" && return 0
[[ $(tput colors) -lt 256 || ! -f $THEME_FILE ]] && return 0

POWERLEVEL9K_MODE='nerdfont-complete'
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(os_icon context dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status background_jobs history)
POWERLEVEL9K_OK_ICON=$'\UF00C '

source $THEME_FILE

# vim:syntax=zsh tabstop=4 shiftwidth=4 expandtab

