# Global properties
command=$XDG_CONFIG_HOME/i3blocks/blocks/$BLOCK_NAME
separator_block_width=15
markup=none

# Volume indicator
[volume]
label=♪
instance=Master
interval=once
signal=10

# Power statuses
[upower-battery]
label=⚡
mac=BAT0
interval=once
markup=pango

# Date Time
[time]
command=echo " <span color='white'>"`date '+%Y-%m-%d %H:%M'`"</span>" && echo "<span color='white'>"`date '+%Y-%m-%d %H:%M'`"</span>" && echo '#198844'
label=
interval=60
markup=pango
